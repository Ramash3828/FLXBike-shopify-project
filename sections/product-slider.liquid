{% liquid
  assign img = section.settings.img
%}

<div class="riding">
  <div class="riding__title">
    Whatâ€™s your
    <span class="riding__title--red">Riding STyle?</span>
  </div>

  <div class="page-width">
    <div class="riding__img-box">
      <img
        class="riding__img"
        src="{{ img | img_url: 'master' }}"
        alt=""
      >
      <div class="riding__btn-box">
        <h2 class="riding__btn-title">urban e-bikes</h2>
